<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivRestaurantLogo"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:contentDescription="@string/restaurant_logo"
        android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Nombre del Restaurante"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvReservationDate"
                android:layout_width="match_parent"
                android:paddingStart="8dp"
                android:layout_height="wrap_content"
                android:text="Fecha de la Reserva" />

            <TextView
                android:id="@+id/tvReservationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:text="Hora de la Reserva" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:paddingStart="8dp"
                    android:src="@drawable/ic_status"
                    android:contentDescription="Status Icon" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:paddingStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
