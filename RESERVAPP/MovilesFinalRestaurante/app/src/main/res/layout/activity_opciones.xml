<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo"
    android:padding="16dp"
    tools:context="activities.OpcionesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opciones de usuario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnMyReservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Reservas"
        android:backgroundTint="@color/botones"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnCreateRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Restaurante"
        android:backgroundTint="@color/botones"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnMyRestaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/botones"
        android:text="Mis Restaurantes"
        android:layout_marginBottom="16dp" />
</LinearLayout>
